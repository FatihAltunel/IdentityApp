@model EditViewModel 
 
<h2>Edit User</h2>
<hr>

<form asp-controller="User" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id">
    <div class="form-group mb-3">
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Enter Username">
      </div>
    <div class="form-group mb-3">
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="card mb-3">
        <div class="card-header">Change Password</div>
        <div class="card-body">
            <div class="form-group mb-3">
              <label asp-for="Password">New Password</label>
              <input asp-for="Password" class="form-control" placeholder="Enter Password">
            </div>
            <div class="form-group mb-3">
              <label asp-for="ConfirmPassword">Confirm New Password</label>
              <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
            </div>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-header">
          Roles
        </div>
        <div class="card-body ">
          @foreach(var role in @ViewBag.Roles){
            <div class="form-check">
              @{
                  var check = (Model.SelectedRole != null && Model.SelectedRole.Any(i => i == role));
              }
              <input 
              type="checkbox" 
              class="form-check-input" 
              name="SelectedRole" 
              value="@role" 
              id="@role"
              @(check ? "checked" : "")
              >
              <label for="@role" class="form-check-label">@role</label>
            </div>
          }
        </div>
      </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <a asp-action="Index" class="btn btn-danger">Back</a>
</form>